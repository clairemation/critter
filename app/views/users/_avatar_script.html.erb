<script>

$(document).ready(function() {
  var species = $("#species").text();
  var search_url = "http://api.pixplorer.co.uk/image?word=animal+" + species;
  var request = $.ajax({
    type: "GET",
    url: search_url,
    dataType: 'json'
  });
  request.done(function(response){
    var img_url = response.images[0].imageurl;
    var img_html = "<img src='" + img_url + "'>";
    $("#avatar").append(img_html);
  });
})

</script>
